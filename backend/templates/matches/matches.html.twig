<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Matches</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Matches</h1>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Stage</th>
                    <th>Division</th>
                    <th>Team A</th>
                    <th>Team B</th>
                    <th>Score A</th>
                    <th>Score B</th>
                    <th>Winner</th>
                    <th>Played</th>
                    <th>Match Date</th>
                </tr>
            </thead>
            <tbody>
                {% if matches is empty %}
                    <tr>
                        <td colspan="10" class="text-center">No matches found.</td>
                    </tr>
                {% else %}
                    {% for match in matches %}
                        <tr class="{{ match.Played ? 'table-success' : 'table-warning' }}">
                            <td>{{ loop.index }}</td>
                            <td>{{ match.stage }}</td>
                            <td>{{ match.division }}</td>
                            <td>{{ match.teamA }}</td>
                            <td>{{ match.teamB }}</td>
                            <td>{{ match.scoreA is not null ? match.scoreA : '-' }}</td>
                            <td>{{ match.scoreB is not null ? match.scoreB : '-' }}</td>
                            <td>{{ match.matchWinner is not null ? match.matchWinner : 'N/A' }}</td>
                            <td>{{ match.Played ? 'Yes' : 'No' }}</td>
                            <td>{{ match.matchDate|date('d.m.Y H:i') }}</td>
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>
</body>
</html>
